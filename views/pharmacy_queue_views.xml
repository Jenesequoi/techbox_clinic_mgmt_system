<odoo>
    <record id="view_pharmacy_queue_form" model="ir.ui.view">
        <field name="name">pharmacy.queue.form</field>
        <field name="model">pharmacy.queue</field>
        <field name="arch" type="xml">
            <form string="Pharmacy Queue">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="prescription_id"/>
                        <field name="doctor_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pharmacy_queue" model="ir.actions.act_window">
        <field name="name">Pharmacy Queue</field>
        <field name="res_model">pharmacy.queue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pharmacy_queue"
              name="Queue"
              parent="menu_clinic_pharmacy_root"
              action="action_pharmacy_queue"/>
</odoo>
