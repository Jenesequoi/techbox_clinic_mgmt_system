<odoo>
    <record id="view_pharmacy_dispense_form" model="ir.ui.view">
        <field name="name">pharmacy.dispense.form</field>
        <field name="model">pharmacy.dispense</field>
        <field name="arch" type="xml">
            <form string="Medication Dispense">
                <sheet>
                    <group>
                        <field name="prescription_id"/>
                        <field name="pharmacist_id"/>
                        <field name="dispensed_on"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="expiry_date"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_complete_dispense" type="object"
                                string="Complete Dispense"
                                class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pharmacy_dispense" model="ir.actions.act_window">
        <field name="name">Medication Dispensing</field>
        <field name="res_model">pharmacy.dispense</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pharmacy_dispense"
              name="Dispensing Log"
              parent="menu_clinic_pharmacy_root"
              action="action_pharmacy_dispense"/>
</odoo>
