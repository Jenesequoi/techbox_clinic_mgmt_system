<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_clinic_imaging_form" model="ir.ui.view">
        <field name="name">clinic.imaging.form</field>
        <field name="model">clinic.imaging</field>
        <field name="arch" type="xml">
            <form string="Imaging Study">
                <sheet>
                    <!-- Statusbar -->
                    <header>
                        <field name="status"
                               widget="statusbar"
                               statusbar_visible="waiting,in_progress,completed,cancelled"
                               clickable="true"/>
                    </header>

                    <group>
                        <group>
                            <field name="reception_id"/>
                            <field name="patient_id" readonly="1"/>
                            <field name="date"/>
                            <field name="imaging_type"/>
                            <field name="body_part"/>
                            <field name="technician_id"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Enter imaging findings..." 
                                   style="height: 100px;"/>
                            <field name="notes" placeholder="Enter technician notes..." 
                                   style="height: 100px;"/>
                            <label for="result_attachment"/>
                            <div>
                                <field name="result_attachment" filename="result_filename"/>
                                <field name="result_filename" invisible="1"/>
                            </div>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_clinic_imaging_tree" model="ir.ui.view">
        <field name="name">clinic.imaging.tree</field>
        <field name="model">clinic.imaging</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reception_id"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="imaging_type"/>
                <field name="body_part"/>
                <field name="status"/>
                <field name="technician_id"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_clinic_imaging_search" model="ir.ui.view">
        <field name="name">clinic.imaging.search</field>
        <field name="model">clinic.imaging</field>
        <field name="arch" type="xml">
            <search>
                <!-- Basic search fields -->
                <field name="reception_id"/>
                <field name="patient_id"/>
                <field name="imaging_type"/>
                <field name="body_part"/>

                <!-- Status filters -->
                <separator/>
                <filter name="status_waiting" string="Waiting" domain="[('status','=','waiting')]"/>
                <filter name="status_in_progress" string="In Progress" domain="[('status','=','in_progress')]"/>
                <filter name="status_completed" string="Completed" domain="[('status','=','completed')]"/>
                <filter name="status_cancelled" string="Cancelled" domain="[('status','=','cancelled')]"/>

                <!-- Date filters -->
                <separator/>
                <filter name="today" string="Today" domain="[('date','=',context_today())]"/>
                <filter name="week" string="This Week" domain="[('date','>=',(context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="month" string="This Month" domain="[('date','>=',(context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>

                <!-- Technician filter -->
                <separator/>
                <filter name="technician" string="Technician" context="{'group_by':'technician_id'}"/>

                <!-- Group By options -->
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by':'status'}"/>
                    <filter string="Imaging Type" name="group_by_imaging_type" context="{'group_by':'imaging_type'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by':'date:day'}"/>
                    <filter string="Patient" name="group_by_patient" context="{'group_by':'patient_id'}"/>
                    <filter string="Technician" name="group_by_technician" context="{'group_by':'technician_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_clinic_imaging" model="ir.actions.act_window">
        <field name="name">Imaging Studies</field>
        <field name="res_model">clinic.imaging</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new imaging study record
            </p>
        </field>
    </record>
#</odoo>
