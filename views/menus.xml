<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem
        id="clinic_root_menu"
        name="Clinic Management"
        groups="base.group_user"
        web_icon="techbox_clinic_mgmt_system,static/description/icon.png"
        sequence="10"/>

    <!-- Dashboard Menu - First item -->
    <menuitem 
        id="clinic_dashboard_menu" 
        name="Dashboard"
        parent="clinic_root_menu"
        action="clinic_dashboard_action"
        sequence="1"/>

    <!-- Operations Menu -->
    <menuitem
        id="clinic_operations_menu"
        name="Operations"
        parent="clinic_root_menu"
        sequence="2"/>

    <!-- Reception Menu under Operations -->
    <menuitem 
        id="clinic_reception_menu" 
        name="Reception"
        parent="clinic_operations_menu"
        action="clinic_reception_action"
        sequence="1"/>

    <!-- Departments Menu under Operations -->
    <menuitem 
        id="clinic_departments_menu" 
        name="Departments"
        parent="clinic_operations_menu"
        action="clinic_dashboard_action"
        sequence="2"/>

    <!-- Configuration Menu -->
    <menuitem
        id="clinic_configuration_menu"
        name="Configuration"
        parent="clinic_root_menu"
        sequence="100"/>
</odoo>