<odoo>
    <!-- Form View -->
    <record id="view_clinic_laboratory_test_form" model="ir.ui.view">
        <field name="name">clinic.laboratory.test.form</field>
        <field name="model">clinic.laboratory.test</field>
        <field name="arch" type="xml">
            <form string="Laboratory Test">
                <header>
                    <button name="action_start" string="Start" type="object" 
                            class="btn-primary" invisible="state != 'waiting'"/>
                    <button name="action_complete" string="Complete" type="object" 
                            class="btn-primary" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            class="btn-secondary" invisible="state in ('completed', 'cancelled')"/>
                    <button name="action_reset" string="Reset to Waiting" type="object" 
                            class="btn-secondary" invisible="state not in ('cancelled', 'completed')"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" 
                            class="btn-primary" invisible="is_billed or state != 'completed'"/>
                    <button name="action_view_invoice" string="View Invoice" type="object" 
                            class="btn-secondary" invisible="not is_billed"/>
                    <field name="state" widget="statusbar" 
                           options="{'clickable': '1'}" 
                           statusbar_visible="waiting,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reception_id" options="{'no_create': True}"/>
                            <field name="patient_id" readonly="1"/>
                            <field name="date"/>
                            <field name="test_type"/>
                        </group>
                        <group>
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="doctor_id" string="Doctor" options="{'no_create': True}"/>
                            <field name="is_billed" invisible="1"/>
                        </group>
                    </group>
                    <group string="Remarks">
                        <field name="description" placeholder="Enter test details or remarks..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_clinic_laboratory_test_tree" model="ir.ui.view">
        <field name="name">clinic.laboratory.test.tree</field>
        <field name="model">clinic.laboratory.test</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='waiting'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="reception_id"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="test_type"/>
                <field name="state"/>
                <field name="department_id"/>
                <field name="doctor_id" string="Doctor"/>
                <field name="is_billed"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_clinic_laboratory_test_search" model="ir.ui.view">
        <field name="name">clinic.laboratory.test.search</field>
        <field name="model">clinic.laboratory.test</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="reception_id"/>
                <field name="patient_id"/>
                <field name="test_type"/>
                <field name="department_id"/>
                <field name="doctor_id" string="Doctor"/>
                <separator/>
                <filter name="status_waiting" string="Waiting" domain="[('state','=','waiting')]"/>
                <filter name="status_in_progress" string="In Progress" domain="[('state','=','in_progress')]"/>
                <filter name="status_completed" string="Completed" domain="[('state','=','completed')]"/>
                <filter name="status_cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                <filter name="billed" string="Billed" domain="[('is_billed','=',True)]"/>
                <filter name="not_billed" string="Not Billed" domain="[('is_billed','=',False)]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('date','=',context_today())]"/>
                <filter name="week" string="This Week" domain="[('date','>=',(context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="month" string="This Month" domain="[('date','>=',(context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by':'state'}"/>
                    <filter string="Test Type" name="group_by_test_type" context="{'group_by':'test_type'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by':'date:day'}"/>
                    <filter string="Patient" name="group_by_patient" context="{'group_by':'patient_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by':'department_id'}"/>
                    <filter string="Doctor" name="group_by_doctor" context="{'group_by':'doctor_id'}"/>
                    <filter string="Billed" name="group_by_billed" context="{'group_by':'is_billed'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_clinic_laboratory_test" model="ir.actions.act_window">
        <field name="name">Laboratory Tests</field>
        <field name="res_model">clinic.laboratory.test</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new laboratory test record
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_clinic_laboratory_root" name="Laboratory"/>
    <menuitem id="menu_clinic_laboratory_tests"
              name="Laboratory Tests"
              parent="menu_clinic_laboratory_root"
              action="action_clinic_laboratory_test"/>
</odoo>