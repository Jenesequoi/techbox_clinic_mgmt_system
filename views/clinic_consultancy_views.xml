<odoo>
    <!-- Action -->
    <record id="action_clinic_consultancy" model="ir.actions.act_window">
        <field name="name">Consultancy Sessions</field>
        <field name="res_model">clinic.consultancy</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_clinic_consultancy_tree" model="ir.ui.view">
        <field name="name">clinic.consultancy.tree</field>
        <field name="model">clinic.consultancy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_clinic_consultancy_form" model="ir.ui.view">
        <field name="name">clinic.consultancy.form</field>
        <field name="model">clinic.consultancy</field>
        <field name="arch" type="xml">
            <form string="Consultation">
                <header>
                    <button name="action_start" type="object" string="Start" states="draft" class="btn-primary"/>
                    <button name="action_complete" type="object" string="Complete" states="in_progress" class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                    </group>
                    <notebook>
                        <page string="Complaint">
                            <field name="complaint"/>
                        </page>
                        <page string="Visit History">
                            <field name="visit_history"/>
                        </page>
                        <page string="Medical Record">
                            <field name="medical_record"/>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Invoice">
                            <field name="invoice_id" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
