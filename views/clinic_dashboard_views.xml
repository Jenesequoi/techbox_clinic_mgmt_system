<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban View -->
    <!-- Department Kanban View -->
    <record id="view_clinic_department_kanban" model="ir.ui.view">
        <field name="name">clinic.department.kanban</field>
        <field name="model">clinic.department</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard" create="0">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="appointment_count"/>
                <field name="today_appointment_count"/>
                <field name="waiting_count"/>
                <field name="completion_rate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click position-relative">
                            <div class="ribbon ribbon-top-right" t-if="record.waiting_count.value > 0">
                                <span class="bg-warning" t-esc="record.waiting_count.value + ' Waiting'"/>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <h3 class="mt-0 mb-0">
                                            <field name="name" class="text-primary"/>
                                        </h3>
                                        <small class="text-muted" t-esc="record.code.value"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-around mb-3">
                                            <div class="text-center px-2 border-end">
                                                <div class="h2 mb-0 text-primary" t-esc="record.today_appointment_count.value"/>
                                                <div class="text-muted small">Today</div>
                                            </div>
                                            <div class="text-center px-2 border-end">
                                                <div class="h2 mb-0 text-success" t-esc="record.appointment_count.value"/>
                                                <div class="text-muted small">Total</div>
                                            </div>
                                            <div class="text-center px-2">
                                                <div class="h2 mb-0" t-attf-class="text-#{record.completion_rate.value >= 70 and 'success' or (record.completion_rate.value >= 30 and 'warning' or 'danger')}" t-esc="Math.round(record.completion_rate.value) + '%'"/>
                                                <div class="text-muted small">Complete</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <div class="progress" style="height: 4px;">
                                            <div class="progress-bar" t-attf-class="bg-#{record.completion_rate.value >= 70 and 'success' or (record.completion_rate.value >= 30 and 'warning' or 'danger')}"
                                                 role="progressbar" t-attf-style="width: #{record.completion_rate.value}%;" 
                                                 t-attf-aria-valuenow="#{record.completion_rate.value}" 
                                                 aria-valuemin="0" aria-valuemax="100"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <div class="btn-group d-flex" role="group">
                                            <button type="object" name="action_view_today_appointments" 
                                                    class="btn btn-outline-primary">
                                                <i class="fa fa-calendar me-1"/>Today
                                            </button>
                                            <button type="object" name="action_department_stats" 
                                                    class="btn btn-outline-primary">
                                                <i class="fa fa-bar-chart me-1"/>Stats
                                            </button>
                                            <button type="object" name="action_department_report" 
                                                    class="btn btn-outline-primary">
                                                <i class="fa fa-file-text me-1"/>Report
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_dropdown_kanban dropdown position-absolute top-0 end-0 m-2">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" name="action_view_appointments" type="object" class="dropdown-item">View All Appointments</a>
                                    <a role="menuitem" name="action_view_today_appointments" type="object" class="dropdown-item">View Today's Schedule</a>
                                    <div class="dropdown-divider"/>
                                    <a role="menuitem" name="action_department_stats" type="object" class="dropdown-item">Department Statistics</a>
                                    <a role="menuitem" name="action_department_report" type="object" class="dropdown-item">Department Report</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_clinic_dashboard_graph" model="ir.ui.view">
        <field name="name">clinic.dashboard.graph</field>
        <field name="model">clinic.reception</field>
        <field name="arch" type="xml">
            <graph string="Clinic Analytics" type="bar">
                <field name="service" type="row"/>
                <field name="date" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_clinic_dashboard_search" model="ir.ui.view">
        <field name="name">clinic.dashboard.search</field>
        <field name="model">clinic.reception</field>
        <field name="arch" type="xml">
            <search string="Search Clinic Data">
                <field name="patient_name"/>
                <field name="service"/>
                <filter string="Today" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('date', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Service" name="group_service" context="{'group_by': 'service'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="clinic_dashboard_action" model="ir.actions.act_window">
        <field name="name">Clinic Dashboard</field>
        <field name="res_model">clinic.department</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_clinic_department_kanban"/>
        <field name="target">main</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                All departments are displayed here.
            </p>
            <p>
                Each department shows its current appointments and statistics.
            </p>
        </field>
    </record>
</odoo>
