<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_clinic_patient_tree" model="ir.ui.view">
        <field name="name">clinic.patient.tree</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="age"/>
                <field name="blood_group"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_clinic_patient_form" model="ir.ui.view">
        <field name="name">clinic.patient.form</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <notebook>
                        <!-- Basic Info -->
                        <page string="Basic Information">
                            <group>
                                <field name="partner_id"/>
                                <field name="date_of_birth"/>
                                <field name="gender"/>
                                <field name="age" readonly="1"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="address"/>
                            </group>
                        </page>

                        <!-- Medical Info -->
                        <page string="Medical Information">
                            <group>
                                <field name="blood_group"/>
                                <field name="allergies"/>
                                <field name="chronic_conditions"/>
                                <field name="current_medication"/>
                            </group>
                        </page>

                        <!-- Medical History -->
                        <page string="Medical History">
                            <field name="consultation_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="doctor_id"/>
                                    <field name="notes"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="date"/>
                                        <field name="doctor_id"/>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- Emergency Contact -->
                        <page string="Emergency Contact">
                            <group>
                                <field name="emergency_contact_name"/>
                                <field name="emergency_contact_phone"/>
                                <field name="emergency_contact_relation"/>
                            </group>
                        </page>

                        <!-- Insurance -->
                        <page string="Insurance">
                            <group>
                                <field name="insurance_provider"/>
                                <field name="insurance_number"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_clinic_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
