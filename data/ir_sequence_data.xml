<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Consultation Department Sequence -->
        <record id="seq_clinic_consultation" model="ir.sequence">
            <field name="name">Consultation Visits</field>
            <field name="code">clinic.reception.consultation</field>
            <field name="prefix">CONS/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="use_date_range">True</field>
            <field name="year_increment">1</field>
